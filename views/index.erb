<h2> Welcome to Pizza Shop </h2>

<div class="row">

<% @products.each do|p| %>
<div class="col-md-4">
	<div>
	<%=p.title %>
	</div>
	<div>
	<img src="<%=p.path_to_image %>"/>
	</div>
	
	<div>
	<%=p.desription%>
	</div>
     
	<div>
	Price: <%=p.price %> rub
	</div>	 

	<div>
	Size: <%=p.size %> cm
	</div>
	<div>
		<button class="btn btn-sm btn-success" onclick="add_to_cart(<%= p.id %>)">Add to cart </button>
	</div>
</div>	
<% end %>

<button class="btn btn-primary btn" onclick="something()"> Click me! </button>

